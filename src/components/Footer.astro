---
import { SITE_TITLE, SITE_EMAIL, SITE_DESCRIPTION } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="title">{SITE_TITLE}</div>
            <div class="description">{SITE_DESCRIPTION}</div>
            <div class="email">Email: {SITE_EMAIL}</div>
            
          </div>

          <div class="item products">
            <div class="item-title">相关作品</div>
            <a href="/archive" target="_blank">项目文章</a>
            <a href="http://sandau.mysxl.cn" target="_blank">嘉然小姐的背后</a>
          </div>

          <div class="item community">
            <div class="item-title">社媒</div>
            <a href="https://instagram.com/realterrydeng?igshid=OGQ5ZDc2ODk2ZA%3D%3D&utm_source=qr" target="_blank">Instagram</a>
            <a href="https://t.me/deng1193291298" target="_blank">Telegram</a>
          </div>
          
          <div class="item resources">
            <div class="item-title">友链</div>
            <a href="https://www.apple.com.cn/newsroom/" target="_blank">Apple</a>
            <a href="https://vercel.com/" target="_blank">Vercel</a>
          </div>

        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`${year} ${SITE_NAME}`} 
          <a href="https://github.com/Terryyyds</a>
        </div>
      </div>
    </div>
  </div>
</div>
